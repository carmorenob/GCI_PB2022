global function decimal redondeo (decimal valor, long decimales, long aproxima);decimal l_valor
l_valor = round(valor,decimales)
if decimales = 0 and aproxima > 0 then
	l_valor = long(l_valor/aproxima) * aproxima
end if
Return l_valor

end function

